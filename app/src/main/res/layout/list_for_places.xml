<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#6c6a6a"
    android:weightSum="1">


    <TextView
        android:id="@+id/pdifficulty_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pevent_name_maker"
        android:layout_alignBottom="@+id/pevent_name_maker"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/pevent_name_maker"
        android:layout_toRightOf="@+id/pevent_name_maker"
        android:text="difficulty"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pevent_name_maker"
        android:text="eventName"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fbfdfe"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pplace_name_maker"
        android:text="placeName"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#f9fafa"
        android:layout_below="@+id/pevent_name_maker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdate_maker"
        android:text="date"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#f9fafa"
        android:layout_below="@+id/pplace_name_maker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/pendTime_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endTime"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pstartTime_maker"
        android:layout_alignBottom="@+id/pstartTime_maker"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/pnumberOfParticipants_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="participants"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pendTime_maker"
        android:layout_alignBottom="@+id/pendTime_maker"
        android:layout_alignRight="@+id/pparticipateCheck"
        android:layout_alignEnd="@+id/pparticipateCheck" />

    <TextView
        android:id="@+id/pstartTime_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startTime"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignBottom="@+id/pdate_maker"
        android:layout_toRightOf="@+id/pdate_maker"
        android:layout_toEndOf="@+id/pdate_maker" />

    <CheckBox
        android:id="@+id/pparticipateCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:button="@drawable/participationbutton_checkbox"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignBottom="@+id/pplace_name_maker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>