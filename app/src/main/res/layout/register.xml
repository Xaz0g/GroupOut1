<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register"
    android:background="#e6e7ef"
    tools:context="com.example.marietopphem.groupout1.Register"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/createAccountSecondary"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:layout_marginBottom="153dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#6ac15e"
        android:onClick="createAccount"
        android:text="Skapa Konto"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.495" />

    <Button
        android:id="@+id/showPassword"
        android:layout_width="134dp"
        android:layout_height="34dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@android:color/transparent"
        android:text="Visa lösenord"
        android:textColor="#1e96fe"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/createAccountSecondary"
        app:layout_constraintHorizontal_bias="0.455" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:background="#f8f8ff"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Upprepa lösenord"
        android:textColorHint="#454A54"
        android:textColor="#454A54"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/showPassword"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:background="#f8f8ff"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Lösenord"
        android:inputType="textPassword"
        android:textColorHint="#454A54"
        android:textColor="#454A54"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/password2"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/email"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:background="#f8f8ff"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="E-post"
        android:textColorHint="#454A54"
        android:textColor="#454A54"
        android:inputType="textEmailAddress"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/password1"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/username"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="188dp"
        android:background="#f8f8ff"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Användarnamn"
        android:inputType="textPersonName"
        android:textColorHint="#454A54"
        android:textColor="#454A54"
        android:textColorHint="#454A54"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="188dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logotype_2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintHorizontal_bias="0.492" />

</android.support.constraint.ConstraintLayout>
