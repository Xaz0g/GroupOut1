<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e7ef"
    android:orientation="vertical"
    tools:context="com.example.marietopphem.groupout1.Settings"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.49">

    <EditText
        android:id="@+id/email"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="E-post"
        android:inputType="textEmailAddress"
        android:textColor="#454A54"
        android:textColorHint="#454A54"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.514" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Förnamn"
        android:inputType="textPersonName"
        android:textColor="#454A54"
        android:textColorHint="#454A54"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Lösenord"
        android:inputType="textPassword"
        android:text="Lösenord"
        android:textColor="#454A54"
        android:textColorHint="#454A54"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/save"
        app:layout_constraintVertical_bias="0.006" />

    <Switch
        android:id="@+id/notification_switch"
        android:layout_width="345dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="70dp"
        android:checked="true"
        android:hint="Notifikationer"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:text="Notifikationer"
        android:textColor="#454A54"
        android:textOff="No"
        android:textOn="Yes"
        android:thumbTint="@color/colorPrimary"
        android:trackTint="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText6" />

    <Button
        android:id="@+id/save"
        android:layout_width="207dp"
        android:layout_height="40dp"
        android:background="#6ac15e"
        android:text="Spara"
        android:onClick="save_settings"
        android:textColor="@color/cardview_light_background"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.969" />
</android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
    android:id="@+id/navigation"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="?android:attr/windowBackground"
    app:menu="@menu/navigation"
    android:gravity="bottom"
    app:itemIconTint="@drawable/tab_marked"
    app:itemTextColor="@drawable/tab_marked">

</android.support.design.widget.BottomNavigationView>


    </LinearLayout>