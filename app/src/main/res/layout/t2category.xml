<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marietopphem.groupout1.Search$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SearchView
        android:id="@+id/searchByCategory"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="?attr/colorControlHighlight"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:orientation="vertical"
        android:text=" Sök"
        android:textColor="#454A54"
        android:visibility="visible"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="109dp"
        android:layout_alignBottom="@+id/cancelButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cancelButton"
        android:layout_toStartOf="@+id/cancelButton" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Avbryt"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="100dp" />

    <CheckBox
        android:id="@+id/checkFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Funktionell träning"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold|italic"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/searchByCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/checkKondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kondition"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@+id/checkFT"
        android:layout_alignBottom="@+id/checkFT"
        android:layout_alignLeft="@+id/checkStyrketraning"
        android:layout_alignStart="@+id/checkStyrketraning" />

    <CheckBox
        android:id="@+id/checkStyrketraning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBollsport"
        android:layout_alignBottom="@+id/checkBollsport"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="Styrketräning"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/checkBollsport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bollsport"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold|italic"
        android:layout_below="@+id/checkFT"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label" />

</RelativeLayout>
