<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e6e7ef"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="com.example.marietopphem.groupout1.Search$PlacehodlerFragement">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SearchView
        android:id="@+id/searchTextField"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="?attr/colorControlHighlight"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:orientation="vertical"
        android:text=" Sök"
        android:visibility="visible"
        android:textColor="#454A54"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="109dp"
        android:layout_below="@+id/section_label"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchButton" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sök"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_alignBottom="@+id/searchTextField"
        android:layout_alignTop="@+id/searchTextField"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:id="@+id/checkCardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchTextField"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/section_label"
        android:text="Kondition"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/checkMobility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:text="Rörlighet "
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@+id/checkCardio"
        android:layout_alignBottom="@+id/checkCardio"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:id="@+id/checkStrengthTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBallSports"
        android:layout_alignBottom="@+id/checkBallSports"
        android:layout_alignStart="@+id/checkMobility"
        android:text="Styrketräning"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/checkBallSports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bollsport"
        android:textStyle="bold|italic"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/checkCardio"
        android:layout_alignStart="@+id/checkCardio" />

</RelativeLayout>
