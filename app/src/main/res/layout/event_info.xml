<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@null"
    android:weightSum="1"
    tools:context="com.example.marietopphem.groupout1.MainActivity">


    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeName"
        android:textColor="#f9fafa"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/numberOfParticipants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ta bort"
        android:layout_below="@+id/info_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:layout_alignBaseline="@+id/delete_btn"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_alignLeft="@+id/info_btn"
        android:layout_alignStart="@+id/info_btn" />

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="difficulty"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/event_name_maker"
        android:layout_alignBottom="@+id/event_name_maker"
        android:layout_toRightOf="@+id/startTime_maker"
        android:layout_toEndOf="@+id/startTime_maker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name_maker"
        android:text="eventName"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#00a7f5"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_maker"
        android:text="date"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#f9fafa"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/endTime_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endTime"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/startTime_maker"
        android:layout_alignBottom="@+id/startTime_maker"
        android:layout_alignRight="@+id/numberOfParticipants"
        android:layout_alignEnd="@+id/numberOfParticipants"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/numberOfParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noOfParticipants"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/info_btn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/startTime_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startTime"
        android:textColor="#f9fafa"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignBaseline="@+id/date_maker"
        android:layout_alignBottom="@+id/date_maker"
        android:layout_toRightOf="@+id/date_maker"
        android:layout_toEndOf="@+id/date_maker" />

    <Button
        android:id="@+id/info_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/info"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignRight="@+id/difficulty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>